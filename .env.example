# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/gridmapper"
# For Prisma Accelerate (optional - use accelerate URL for DATABASE_URL and direct URL for DIRECT_URL)
# DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your-api-key"
# DIRECT_URL="postgres://username:password@db.prisma.io:5432/postgres?sslmode=require"

# Authentication Secrets (GENERATE NEW SECURE KEYS!)
JWT_SECRET="your-secure-jwt-secret-key-min-32-chars"
NEXTAUTH_SECRET="your-secure-nextauth-secret-key-min-32-chars"

# Microsoft Integration
NEXT_PUBLIC_MICROSOFT_CLIENT_ID="your-microsoft-app-client-id"

# Google Integration
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your-google-oauth-client-id"

# Application URLs
NEXTAUTH_URL="http://localhost:3000"

# Optional: Google AI Integration (for automatic brightness detection)
GOOGLE_GENAI_API_KEY="your-google-ai-api-key"

# Optional: Email Configuration (for password reset)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="GridMapper <noreply@gridmapper.com>"

# Optional: SMS Configuration (for password reset via SMS)
CLICKSEND_USERNAME="your-clicksend-username"
CLICKSEND_API_KEY="your-clicksend-api-key"
SMS_SENDER_NAME="GridMapper"
